<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/daily_goal_label"
            android:textStyle="bold"
            android:textColor="@color/onBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_goal_daily"
            android:hint="@string/steps"
            android:inputType="number"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/weekly_goal_label"
            android:textStyle="bold"
            android:textColor="@color/onBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_goal_weekly"
            android:hint="@string/steps"
            android:inputType="number"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_save_goals"
            android:text="@string/save_goals"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_goal_daily"
            android:text="@string/goal_daily_value"
            android:textColor="@color/onBackground"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress_daily"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/colorSecondary"
            android:backgroundTint="@color/surfaceVariant"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/txt_goal_weekly"
            android:text="@string/goal_weekly_value"
            android:textColor="@color/onBackground"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress_weekly"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="@color/colorSecondary"
            android:backgroundTint="@color/surfaceVariant"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>
</ScrollView>
